{
    "name": "cappuc/rest-countries-php",
    "description": "Rest Countries api client for php",
    "keywords": [
        "cappuc",
        "rest-countries-php"
    ],
    "homepage": "https://github.com/cappuc/rest-countries-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabio Capucci",
            "email": "fabio.cappuc@gmail.com",
            "homepage": "https://github.com/cappuc",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "php-http/client-implementation": "^1.0",
        "php-http/message-factory": "^1.0",
        "tightenco/collect": "^5.6"
    },
    "require-dev": {
        "guzzlehttp/psr7": "^1.0",
        "larapack/dd": "^1.0",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/mock-client": "^1.0",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Cappuc\\RestCountries\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cappuc\\RestCountries\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Cappuc\\RestCountries\\RestCountriesServiceProvider"
            ],
            "aliases": {
                "RestCountries": "Cappuc\\RestCountries\\RestCountriesFacade"
            }
        }
    }
}
